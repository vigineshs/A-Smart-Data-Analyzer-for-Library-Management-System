 				  	    }
		    
		    
		    else
		    {
		    	
		    System.out.println("INSERT into REGISTER values('"+tid+"','"+tname+"','"+tauthor+"','"+tedition+"','"+tisbn+"','"+track+"','"+trow+"');");
		    st.executeUpdate("INSERT into TAGGING values('"+tid+"','"+tname+"','"+tauthor+"','"+tedition+"','"+tisbn+"','"+track+"','"+trow+"');");
		
